	public Set<Bike> getAvailableBikes(){
		return null;
		
	}
	@Override
	public Bike getById(Integer id) {
		Bike bike = null;

		try (Connection conn = cu.getConnection()) {			
			// Get the cat object
			String sql = "select bike_status.id, bike_status.avalibilty, color, bike_size, bike.model_id, bike.status_id, status_avalibilty,  "
					+ "model.mname as model_name, btype, year_made, brand from "
					+ "(select bike.bike_id, bike.color, bike_size, bike.status_id, bike.model_id, status.avalibilty as status_avalibilty from bike"
					+ " join status on bike.status_id = status.status_id) as bike_status "
					+ "join model on bike.model_id = model.model_id where model_id = ?";
			PreparedStatement pstmt = conn.prepareStatement(sql);
			pstmt.setInt(1, id);
			ResultSet rs = pstmt.executeQuery();
			if (rs.next()) {
				bike = new Bike();
				bike.setId(rs.getInt("id"));
				bike.setColor(rs.getString("color"));
				bike.setSize(rs.getString("size"));
				Model b = new Model();
				b.setId(rs.getInt("model_id"));
				b.setName(rs.getString("model_name"));
				b.setType(rs.getString("btype"));
				b.setYear(rs.getInt("year_made"));
				b.setBrand(rs.getString("brand"));
				bike.setModeltype(b);
				Status s = new Status();
				s.setId(rs.getInt("status_id"));
				s.setAvalibilty(rs.getString("status_avalibilty"));
				bike.setStatus(s);
			}
		}catch(Exception e) {
			e.printStackTrace();

		}
		return bike;
	}
