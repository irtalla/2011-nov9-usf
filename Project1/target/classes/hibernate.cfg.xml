<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- set up connection info -->
		<property name="hibernate.connection.driver.class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://revature-training.cvnf11wpw1g5.us-east-2.rds.amazonaws.com/spmdb</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">revature1234</property>
		
		<!-- hibernate setup -->
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="show_sql">false</property>
		<property name="hibernate.format_sql">true</property>
		<property name="use_sql_comments">true</property>
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		
		<!-- tell hibernate where to find our mappings -->
		<mapping class="com.revature.beans.Draft"></mapping>
		<mapping class="com.revature.beans.DraftFeedback"></mapping>
		<mapping class="com.revature.beans.Person"></mapping>
		<mapping class="com.revature.beans.Pitch"></mapping>
		<mapping class="com.revature.beans.PitchFeedback"></mapping>
		<mapping class="com.revature.beans.PitchInfoRequest"></mapping>
		<mapping class="com.revature.beans.Attachment"></mapping>
		<mapping class="com.revature.beans.GenreCommittee"></mapping>
	</session-factory>
</hibernate-configuration>