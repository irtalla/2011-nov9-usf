<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- set up connection info -->
		<property name="hibernate.connection.driver.class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres?currentSchema=pitchapp</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">12345</property>
		
		<!-- hibernate setup -->
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="use_sql_comments">true</property>
		
		<!-- tell hibernate where to find our mappings -->
		<mapping class="com.revature.beans.Genre"></mapping>
		<mapping class="com.revature.beans.Pitch"></mapping>
		<mapping class="com.revature.beans.Priority"></mapping>
		<mapping class="com.revature.beans.RequestComment"></mapping>
		<mapping class="com.revature.beans.ReviewStage"></mapping>
		<mapping class="com.revature.beans.ReviewStatus"></mapping>
		<mapping class="com.revature.beans.Role"></mapping>
		<mapping class="com.revature.beans.StoryType"></mapping>
		<mapping class="com.revature.beans.User"></mapping>
	</session-factory>
</hibernate-configuration>